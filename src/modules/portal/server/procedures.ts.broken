        },
        residents: allResidents.map(r => ({
          id: r.id,
          name: `${r.firstName} ${r.lastName}`,
          email: r.email,
          isActive: r.isActive,
          isMatch: r.email === userEmail,
          unitId: r.unitId,
        })),
        matchingResident: matchingResident
